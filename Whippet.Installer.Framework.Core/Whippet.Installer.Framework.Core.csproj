        <Nullable>enable</Nullable>
        <AssemblyName>Athi.Whippet.Installer.Framework.Core</AssemblyName>
        <RootNamespace>Athi.Whippet.Installer.Framework.Core</RootNamespace>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <Authors>Athi, LLC</Authors>
