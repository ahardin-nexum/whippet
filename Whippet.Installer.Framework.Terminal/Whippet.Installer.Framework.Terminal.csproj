<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>WhippetSetup</AssemblyName>
        <RootNamespace>Athi.Whippet.Installer.Framework.Terminal</RootNamespace>
      <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
      <Authors>Athi, LLC</Authors>
      <RepositoryUrl>https://github.com/ahardinathillc/whippet</RepositoryUrl>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
      <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.9.1" />
      <PackageReference Include="Microsoft.Data.SqlClient" Version="5.1.5" />
      <PackageReference Include="NHibernate.Driver.MySqlConnector" Version="2.0.4" />
      <PackageReference Include="Spectre.Console" Version="0.48.0" />
      <PackageReference Include="Spectre.Console.Extensions.Progress" Version="1.0.0" />
      <PackageReference Include="System.Data.SqlClient" Version="4.8.6" />
      <PackageReference Include="System.Drawing.Common" Version="8.0.2" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Whippet.Data\Whippet.Data.csproj" />
      <ProjectReference Include="..\Whippet.Installer.Framework.Core\Whippet.Installer.Framework.Core.csproj" />
      <ProjectReference Include="..\Whippet.Installer.Framework.Database\Whippet.Installer.Framework.Database.csproj" />
      <ProjectReference Include="..\Whippet\Whippet.csproj" />
    </ItemGroup>

</Project>